<div class='row'>
	<div class='small-12 columns'>
		<h1>Users</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>User Name</th>
          <th>email</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
    		<% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
    				<td><%= user.email %></td>
    				<td><%= 'admin' if user.admin? %></td>
            <td><%= link_to 'edit', edit_user_path(user) %>  <%= link_to 'delete', user, method: :delete, confirm: 'Are you sure?' unless current_user == user %></td>
          </tr>
    		<% end %>
      </tbody>
    </table>
	</div>
</div>