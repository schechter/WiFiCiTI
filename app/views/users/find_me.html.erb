<div class='row'>
  <%= form_tag find_me_users_path do %>
  <%= text_field_tag :location %>
  <%= submit_tag %>
  <% end %>

  <img src='<%= @google_map_url %>'>
 


  <div class='small-4 columns'>
    <% c = 1 %>
    <ul>
    <% @hotspots.each do |hotspot| %>
    <li><%= "#{c}: #{hotspot.name}" %><br />
    <%= "#{hotspot.street}, #{hotspot.city}" %><br />
    <%= hotspot.phone %><br />
    <%= link_to "#{pluralize(hotspot.ratings.count, 'rating')}",hotspot %>
  </li>
    <% c += 1 %>
    <% end %>
  </ul>
  </div>

