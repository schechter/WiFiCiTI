<div class='row'>
	<div class='small-12 columns'>
	<%= render partial: 'shared/errors', locals: {object: @rating} %>
		<%= form_for @rating do |f| %>
		<%= f.hidden_field :hotspot_id, value: @hotspot.id %>
		<%= f.number_field :speed, in: 1..5, placeholder: 'Rate Speed (1-5)' %>
		<%= f.number_field :reliability, in: 1..5, placeholder: 'Rate reliability (1-5)' %>
		<%= f.number_field :accessibility, in: 1..5, placeholder: 'Rate accessibility (1-5)' %>
		<%= f.number_field :power, in: 1..5, placeholder: 'Rate power outlets (1-5)' %>
		<%= f.number_field :noise_level, in: 1..5, placeholder: 'Rate noise level (1-5)' %>
		<%= f.label :comments %>
		<%= f.text_area :comments %>
		<%= f.hidden_field :user_id, value: current_user.id %>
		<%= f.submit "check in", class: 'button' %>
		<% end %>
	</div>
</div>